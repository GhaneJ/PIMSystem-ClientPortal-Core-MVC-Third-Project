@model PIM_Dashboard.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductLifecycleStatus" class="control-label"></label>
                <input asp-for="ProductLifecycleStatus" class="form-control" />
                <span asp-validation-for="ProductLifecycleStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductShortDescription" class="control-label"></label>
                <input asp-for="ProductShortDescription" class="form-control" />
                <span asp-validation-for="ProductShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductLongDescription" class="control-label"></label>
                <input asp-for="ProductLongDescription" class="form-control" />
                <span asp-validation-for="ProductLongDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductManager" class="control-label"></label>
                <input asp-for="ProductManager" class="form-control" />
                <span asp-validation-for="ProductManager" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResourceFileName" class="control-label"></label>
                <input asp-for="ResourceFileName" class="form-control" />
                <span asp-validation-for="ResourceFileName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResourceImageTitle" class="control-label"></label>
                <input asp-for="ResourceImageTitle" class="form-control" />
                <span asp-validation-for="ResourceImageTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ProductIndex" class="btn btn-secondary mt-3 ml-3">Back</a>
</div>

