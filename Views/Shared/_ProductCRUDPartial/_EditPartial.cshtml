@model PIM_Dashboard.Models.Product

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="row justify-content-around mt-5">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" asp-for="ResourceFileName" />
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" value="Consumable" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ProductCreated" class="control-label"></label>
                <input asp-for="ProductCreated" value="@Model.ProductCreated" class="form-control" />
                <span asp-validation-for="ProductCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductShortDescription" class="control-label"></label>
                <input asp-for="ProductShortDescription" class="form-control" />
                <span asp-validation-for="ProductShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductLongDescription" class="control-label"></label>
                <input asp-for="ProductLongDescription" class="form-control" />
                <span asp-validation-for="ProductLongDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductManager" class="control-label"></label>
                <input asp-for="ProductManager" class="form-control" />
                <span asp-validation-for="ProductManager" class="text-danger"></span>
            </div>
            <div class="form-group mb-5">
                <label asp-for="ProductLifecycleStatus"></label><br />
                <select asp-for="ProductLifecycleStatus" class="form-control w-50" name="ProductLifecycleStatus">
                    <option value=@string.Empty selected>Select an option</option>
                    <option value="PreProduction">Pre-production</option>
                    <option value="PreSales">Pre-sales</option>
                    <option value="Active">Active</option>
                    <option value="PhaseOut">Phase-out</option>
                    <option value="Inactive">Inactive</option>
                    <option value="Approved">Approved</option>
                </select>
                <span asp-validation-for="ProductLifecycleStatus" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <h4 class="pt-5 create-title">Product image</h4>
                <hr />
                <div class="col-sm-10">
                    <img class="room-image" src="@("~/Image/Product/"+Model.ResourceFileName)" asp-append-version="true" width="250px" height="250px">
                </div>

                <label class="ml-2 mt-2">
                    Change photo
                    <input type="checkbox" id="change_image" />
                </label>
                <div class="form-group" id="image_file">
                    <label asp-for="ResourceImageFile" class="control-label"></label>
                    <input asp-for="ResourceImageFile" accept="image/*" />
                    <span asp-validation-for="ResourceImageFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a asp-action="ItemIndex" class="btn btn-secondary mt-3 mx-3">Back</a>
                    <input type="submit" value="Update" class="btn btn-primary mt-3" />
                </div>
            </div>
        </div>
    </div>
</form>