                            <a class="sidebar-link" href="#exampledropdownDropdown" data-bs-toggle="collapse">
                                <svg class="svg-icon svg-icon-sm svg-icon-heavy me-xl-2">
                                    <use xlink:href="#browser-window-1"> </use>
