                    <div class="container-fluid px-0">
                        <h2 class="mb-0 p-1">Dashboard</h2>
                    </div>
                </header>

                <div class="container">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>

                <!-- Page Footer-->
                <footer class="position-fixed bottom-0 bg-success bg-gradient text-orange text-center py-3 w-100 text-xs" id="footer">
                    <div class="container-fluid">
                        <div class="row gy-2">
                            <div class="col-sm-6 text-sm-start">
                                <p class="mb-0">P.I.M SystemS 2022-</p>
                            </div>
