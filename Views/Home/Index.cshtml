@model PIM_Dashboard.ViewModels.Product_Item_ViewModel

<!-- Dashboard Counts Section-->
<section class="pb-0">
    <div class="container-fluid">
        <div class="card mb-0">
            <div class="card-body">
                <div class="row gx-5">
                    <!-- Product -->
                    <div class="col-xl-3 col-sm-6 py-4 border-lg-end border-gray-200">
                        
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">
                                            <div class="mx-3">
                                                <h5 class="h5 fw-light text-gray-600 mb-3">All Products</h5>
                                                <div class="number text-center"><strong class="text-lg">@Model.Products.Count</strong></div>
                                            </div>
                                        </a>
                                        <div class="icon flex-shrink-0 bg-transparent">
                                            <img class="image-thumbnail img-fluid" src="/Image/Assets/Product.png" asp-append-version="true" width="64px" height="64px" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        
                    </div>
                    <!-- Item -->
                    <div class="col-xl-3 col-sm-6 py-4 border-lg-end border-gray-200">
                        
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Item" asp-action="Index">
                                            <div class="mx-3">
                                                <h5 class="h5 fw-light text-gray-600 mb-3">All Items</h5>
                                                <div class="number text-center"><strong class="text-lg">@Model.Items.Count</strong></div>
                                            </div>
                                        </a>
                                        <div class="icon flex-shrink-0 bg-transparent">
                                            <img class="image-thumbnail img-fluid" src="/Image/Assets/Item.png" asp-append-version="true" width="64px" height="64px" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        
                    </div>
                    <!-- Channel -->
                    <div class="col-xl-3 col-sm-6 py-4 border-lg-end border-gray-200">
                        
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Channel" asp-action="Index">
                                            <div class="mx-3">
                                                <h5 class="h5 fw-light text-gray-600 mb-3">Items on Web</h5>
                                                <div class="number text-center"><strong class="text-lg">@Model.Items.Where(x => x.ItemStatus == "PublishedOnEcom").Count()</strong></div>
                                            </div>
                                        </a>
                                        <div class="icon flex-shrink-0 bg-transparent">
                                            <img class="image-thumbnail img-fluid" src="/Image/Assets/eCommerce.png" asp-append-version="true" width="64px" height="64px" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        
                    </div>
                    <!-- Total -->
                    <div class="col-xl-3 col-sm-6 py-4 border-lg-end border-gray-200">
                        
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <a class="nav-link text-dark">
                                            <div class="mx-3">
                                                <h5 class="h5 fw-light text-gray-600 mb-3">Total Entities</h5>
                                                <div class="number text-center"><strong class="text-lg">@(Model.Products.Count + Model.Items.Count)</strong></div>
                                            </div>
                                        </a>
                                        <div class="icon flex-shrink-0 bg-transparent">
                                            <img class="image-thumbnail img-fluid" src="/Image/Assets/Total.png" asp-append-version="true" width="64px" height="64px" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
