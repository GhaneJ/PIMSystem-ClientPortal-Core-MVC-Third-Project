@model PIM_Dashboard.Models.Item

@{
    ViewData["Title"] = "Edit";
}

@{
    System.Globalization.CultureInfo culture = new System.Globalization.CultureInfo("sv-se", true);
    culture.NumberFormat.NumberDecimalSeparator = ",";
    System.Threading.Thread.CurrentThread.CurrentCulture = culture;
    System.Threading.Thread.CurrentThread.CurrentUICulture = culture;
}

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ItemId" />
            <input type="hidden" asp-for="ResourceFileName" />
            <div class="form-group">
                <label asp-for="ItemName" class="control-label"></label>
                <input asp-for="ItemName" class="form-control" />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemStatus" class="control-label"></label>
                <input asp-for="ItemStatus" class="form-control" />
                <span asp-validation-for="ItemStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemRetailPrice" class="control-label"></label>
                <input asp-for="ItemRetailPrice" class="form-control" />
                <span asp-validation-for="ItemRetailPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemPackageType" class="control-label"></label>
                <input asp-for="ItemPackageType" class="form-control" />
                <span asp-validation-for="ItemPackageType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemPackageQuantity" class="control-label"></label>
                <input asp-for="ItemPackageQuantity" class="form-control" />
                <span asp-validation-for="ItemPackageQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemEngineType" class="control-label"></label>
                <input asp-for="ItemEngineType" class="form-control" />
                <span asp-validation-for="ItemEngineType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemServiceInterval" class="control-label"></label>
                <input asp-for="ItemServiceInterval" class="form-control" />
                <span asp-validation-for="ItemServiceInterval" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemBrandColor" class="control-label"></label>
                <input asp-for="ItemBrandColor" class="form-control" />
                <span asp-validation-for="ItemBrandColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemBaseColor" class="control-label"></label>
                <input asp-for="ItemBaseColor" class="form-control" />
                <span asp-validation-for="ItemBaseColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemNutritionalFacts" class="control-label"></label>
                <input asp-for="ItemNutritionalFacts" class="form-control" />
                <span asp-validation-for="ItemNutritionalFacts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemFoodGroup" class="control-label"></label>
                <input asp-for="ItemFoodGroup" class="form-control" />
                <span asp-validation-for="ItemFoodGroup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemSize" class="control-label"></label>
                <input asp-for="ItemSize" class="form-control" />
                <span asp-validation-for="ItemSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemCategory" class="control-label"></label>
                <input asp-for="ItemCategory" class="form-control" />
                <span asp-validation-for="ItemCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemForceSend" class="control-label"></label>
                <input asp-for="ItemForceSend" class="form-control" />
                <span asp-validation-for="ItemForceSend" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemCreated" class="control-label"></label>
                <input asp-for="ItemCreated" class="form-control" />
                <span asp-validation-for="ItemCreated" class="text-danger"></span>
            </div>            
        </div>      
        
        <div class="col-10 offset-1 col-md-5 offset-md-0">
            <h4 class="pt-5 create-title">Item image</h4>
            <hr />
            <div class="col-sm-10">
                <img class="room-image" src="@("~/image/"+Model.ResourceFileName)" asp-append-version="true" width="250px" height="250px">
            </div>

            <label class="ml-2 mt-2">
                Change photo
                <input type="checkbox" id="change_image" />
            </label>
            <div class="form-group" id="image_file">
                <label asp-for="ResourceImageFile" class="control-label"></label>
                <input asp-for="ResourceImageFile" accept="image/*" />
                <span asp-validation-for="ResourceImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary mt-3" />
                <a asp-action="Index" class="btn btn-secondary mt-3 ml-3">Back To Items</a>
            </div>
        </div>

    

</form>

<br />
<br />

<script>
    let checkbox = document.getElementById("change_image")
    /*let imageName = document.getElementById("image_name")*/
    let imageFile = document.getElementById("image_file")

    imageFile.style.display = "none";

    checkbox.addEventListener('change', function () {
        if (this.checked) {
            /*console.log("Checkbox is checked..");*/
            /*imageName.style.display = "none";*/
            imageFile.style.display = "block";
        } else {
            /*console.log("Checkbox is not checked..");*/
            imageFile.style.display = "none";
            /*imageName.style.display = "block";*/
        }
    });

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
